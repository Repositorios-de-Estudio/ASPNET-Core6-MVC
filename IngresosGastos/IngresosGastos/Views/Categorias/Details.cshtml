@model IngresosGastos.Models.Categoria

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @* @Html.DisplayFor(model => model.Tipo)*@
            @if (Model.Tipo == "IN")
            {
                <p class="btn btn-outline-success">Ingreso</p>
            }
            else
            {
                <p class="btn btn-outline-danger">Gasto</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.Estado)*@
            @if (Model.Estado)
            {
                <p class="btn btn-outline-primary">Activo</p>
            }
            else
            {
                <p class="btn btn-outline-info">Inactivo</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
