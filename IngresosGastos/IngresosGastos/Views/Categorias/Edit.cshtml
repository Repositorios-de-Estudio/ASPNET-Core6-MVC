@model IngresosGastos.Models.Categoria

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombreCategoria" class="control-label"></label>
                <input asp-for="NombreCategoria" class="form-control" />
                <span asp-validation-for="NombreCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                @*<input asp-for="Tipo" class="form-control" />*@
                <select asp-for="Tipo" class="form-control">
                    <option value="IN" class="btn btn-outline-success">Ingreso</option>
                    <option value="GA" class="btn btn-outline-danger">Gasto</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Estado
                    @*<input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)*@
                </label>
                <select asp-for="Estado" class="form-control">
                    <option value=true class="btn btn-outline-primary">Activo</option>
                    <option value=false class="btn btn-outline-info">Inactivo</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
